# Django Secret Key
SECRET_KEY=your-secret-key-here

# Database Configuration (Optional - defaults to SQLite)
DATABASE_URL=postgresql://user:password@localhost/wellness_db

# OpenAI API Key for AI features
OPENAI_API_KEY=your-openai-api-key

# Spoonacular API Key for nutrition data
SPOONACULAR_API_KEY=your-spoonacular-api-key

# Email Configuration (SendGrid recommended)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key-here
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Frontend URL for email links
FRONTEND_URL=https://your-frontend-domain.com

# Redis Configuration (Optional - for caching and Celery)
REDIS_URL=redis://localhost:6379

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret